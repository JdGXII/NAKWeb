
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
<h2>My Profile</h2>


@if(Session["username"] != null)
{
    <h2>Hi @Session["username"]</h2>
}
@if (Session["userpermission"].ToString() == "3")
{
    @section BackMenu{
    <div class="left-menu-title">Backend Controls</div>
    <div class="left-menu">

        @foreach (AKAWeb_v01.Models.BackendMenuModel menuitem in ViewData["BackendPages"] as List<AKAWeb_v01.Models.BackendMenuModel>)
        {
            <div class="left-menu-item">@Html.ActionLink(menuitem.title, menuitem.action, menuitem.controller, null, new { @class = "left-menu-link" })</div>
        }

    </div>
    

      
    }


}

<div class="row">

    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <p>
            <a href="@Url.Action("AccountInfo", "Backend")" class="btn btn-info btn-block my-profile-btn">
                <span class="glyphicon glyphicon-user"></span> Update User Profile
            </a>
        </p>

        <p>
            <a href="@Url.Action("UpdatePassword", "Backend")" class="btn btn-info btn-block my-profile-btn">
                <span class="glyphicon glyphicon-lock"></span> Update Password
            </a>
        </p>
        <p>
            <a href="@Url.Action("PurchaseHistory", "Backend")" class="btn btn-info btn-block my-profile-btn">
                <span class="glyphicon glyphicon-credit-card"></span> Purchase History
            </a>
        </p>
    </div>
    <div class="col-md-3">
        @if (ViewBag.LowStock == true)
        {
            <p style="color:red"><b>It looks like some products are low on stock. <br />
                <a href="@Url.Action("ListProducts", "Backend")">Click here to fix it.</a></b></p>
        }
    </div>
    </div>


</div>
