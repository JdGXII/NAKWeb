@model AKAWeb_v01.Models.UserModel

@{
    ViewBag.Title = "AccountInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Account Information</h2>
@section BackMenu{
    <div class="left-menu-title">My Profile</div>
    <div class="left-menu">

        @foreach (AKAWeb_v01.Models.BackendMenuModel menuitem in ViewData["MyProfilePages"] as List<AKAWeb_v01.Models.BackendMenuModel>)
        {
            <div class="left-menu-item">@Html.ActionLink(menuitem.title, menuitem.action, menuitem.controller, null, new { @class = "left-menu-link" })</div>
        }

    </div>
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-5">
        <p style="color:red;"><b>@ViewBag.Result</b></p>
        @using (Html.BeginForm("UpdateProfile", "Backend", FormMethod.Post))
        {
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" value="@Model.name" class="form-control" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" value="@Model.email" class="form-control" name="email" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="password">Country</label>
                <input type="text" value="@Model.address.country" class="form-control" name="country" placeholder="Country">
            </div>
            <div class="form-group">
                <label for="password">State</label>
                <input type="text" value="@Model.address.state" class="form-control" name="state" placeholder="State">
            </div>
            <div class="form-group">
                <label for="password">City</label>
                <input type="text" value="@Model.address.city" class="form-control" name="city" placeholder="City">
            </div>
            <div class="form-group">
                <label for="password">Street Address</label>
                <input type="text" value="@Model.address.street_address" class="form-control" name="street_address" placeholder="Street Address">
            </div>
            <div class="form-group">
                <label for="password">Zip Code</label>
                <input type="text" value="@Model.address.zip" class="form-control" name="zip" placeholder="Zip Code">
            </div>
            <input name="id" type="hidden" value="@Model.id" />

            <button type="submit" class="btn btn-primary">Save Changes</button>

        }
    </div>
    <div class="col-md-3"></div>

    

</div>
