
@{
    ViewBag.Title = "Login";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <script type="text/javascript">
        function form_submit() {
            document.getElementById("retrieval_form").submit();
        }
</script>
    }

<h2>Login</h2>


<div class="row">
    <div class="col-md-offset-4">
        <p style="color:red;"><b>@ViewBag.LoginFailed</b></p>
        <h1>Login</h1>
        <div class="form-group">
            @using (Html.BeginForm("Login", "Backend", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.Label("Email")
                    <input class="form-control" name="username" type="text" placeholder="username" />
                </div>
                <div class="form-group">
                    @Html.Label("Password")

                    <input class="form-control" name="password" type="password" placeholder="password" />
                </div>

                <button type="submit" class="btn btn-primary">Login</button>

            }
        </div>

        <p>Don't have an account? <a href="@Url.Action("Register","Backend")">Click here</a> to register</p>
        <p><a href="#myModal" data-toggle="modal" data-target="#myModal">Forgot your password?</a></p>

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Recover Password</h4>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("RecoverPassword", "Backend", FormMethod.Post, new { id = "retrieval_form" }))
                        {

                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="email" class="form-control" name="email" placeholder="Enter email">
                            </div>

                            <button onclick="form_submit()" data-dismiss="modal" type="submit" class="btn btn-primary">Send</button>

                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>




