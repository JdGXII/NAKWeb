@model AKAWeb_v01.Models.PageModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Subheader{

    <div class="row ">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-9">
                    <img class="subheader-image resizeimg" src="@Url.Content(Model.subheaderImage)" />
                </div>
            </div>
        </div>


    </div>
}

@section LeftMenu{
    <div class="left-menu-title">@Model.leftMenuTitle </div>
    <div class="left-menu">

        @foreach (AKAWeb_v01.Models.PageModel menuitem in Model.leftMenu)
        {
            <div class="left-menu-item">@Html.ActionLink(menuitem.title, "Pages", "SubPages", new { id = menuitem }, new { @class = "left-menu-link" })</div>
        }

    </div>

}
<div class="pad-right">
    @Html.Raw(Model.pageContent)
</div>
