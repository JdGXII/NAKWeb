@model  AKAWeb_v01.Models.CartViewModel

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://www.paypalobjects.com/api/checkout.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
