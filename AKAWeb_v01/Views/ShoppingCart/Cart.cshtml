        <tr>
            <th>
                Product Name
            </th>
            <th>
                Cost
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.cart)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.product_description) 
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.product_cost) 
