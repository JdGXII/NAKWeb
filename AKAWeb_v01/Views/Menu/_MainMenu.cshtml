@model IEnumerable<AKAWeb_v01.Models.SectionModel>


<ul class="nav nav-pills" style="display:inline-block;color:darkgray;">
    @foreach (var item in Model)
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle menu-link" data-toggle="dropdown" role="button" aria-expanded="false">@item.title<span style="border-top-color:#777777;" class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                @foreach(var page in item.pages)
                {
                    <li>
                        @Html.ActionLink(page.title, "Pages", "SubPages", new { id = page.title}, new { @class ="menu-link" })
                    </li>
                }
            </ul>
        </li>


    }
</ul>



